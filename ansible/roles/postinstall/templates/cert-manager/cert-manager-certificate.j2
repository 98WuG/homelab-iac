---
apiVersion: cert-manager.io/v1
kind: Certificate
metadata:
  name: {{ letsencrypt_cert }}{{ '' if letsencrypt_prod else '-staging'}}
  namespace: default
spec:
  commonName: "*.{{ domain }}"
  dnsNames:
  - {{ domain }}
  - "*.{{ domain }}"
  issuerRef:
    kind: Issuer
    name: letsencrypt
  secretName: {{ letsencrypt_cert }}
